---
import { SITE_TITLE } from "../config";
---

<header
  id="header"
  class="fixed w-full flex flex-col sm:flex-row justify-between items-center p-1 bg-white/95 z-20 opacity-0 -translate-y-2.5"
>
  <a href="/#home" class="p-2">
    <h2 class="text-lg uppercase">
      {SITE_TITLE}
    </h2>
  </a>
  <nav class="sm:p-2">
    <a class="p-2" href="#work">Work</a>
    <a class="p-2" href="#experience">Experience</a>
    <a class="p-2" href="#posts">Posts</a>
    <a class="p-2" href="#about">About</a>
  </nav>
</header>

<script>
  import gsap from "gsap";

  gsap.to("#header", {
    duration: 2,
    delay: 2,
    ease: "expo",
    opacity: 1,
    y: 0,
  });
</script>
