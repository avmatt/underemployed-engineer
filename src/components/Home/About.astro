<script>
  import gsap from "gsap";

  var photosTop = 0;
  handleResize();

  function handleResize() {
    var el = document.getElementById("photos");
    if (el) {
      photosTop = el.offsetTop;
    }
  }

  addEventListener("resize", handleResize);

  addEventListener("scroll", function () {
    gsap.to("#photos > img:nth-child(1)", {
      duration: 1,
      y: (window.scrollY - photosTop) * -0.1,
      rotate: `${(window.scrollY - photosTop) / -150 - 10}deg`,
    });
    gsap.to("#photos > img:nth-child(2)", {
      duration: 1,
      y: (window.scrollY - photosTop) * -0.2,
      rotate: `${(window.scrollY - photosTop) / 50 + 5}deg`,
    });
  });
</script>
